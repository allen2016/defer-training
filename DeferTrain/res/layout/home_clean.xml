<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:uview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
    <com.mycustom.view.TitleView
         android:layout_width="match_parent"  
         android:layout_height="50dp"
         android:id="@+id/mytitleview"
         uview:titleText="@string/homeTitle"
         uview:leftIcon="@drawable/ic_launcher"
         uview:rightIcon="@drawable/ic_launcher"
         uview:leftIconVisible="visible"
         uview:rightIconVisible="visible"
         uview:viewBgColor="@color/home_title" />
    
<TextView 
    android:id="@+id/usable"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="80dp"
    android:textSize="20dp"
    android:text=""/>
<TextView 
    android:id="@+id/data"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:textSize="20dp"
    android:text=""/>
   <Button
        android:id="@+id/clean_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clean_room" 
        android:background="@drawable/shape"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
      />
</LinearLayout>