<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical" >

<com.mycustom.view.TitleView
         android:layout_width="match_parent"  
         android:layout_height="50dp"
         android:id="@+id/mytitleview"
         uview:titleText="@string/homeTitle"
         uview:leftIcon="@drawable/ic_launcher"
         uview:rightIcon="@drawable/ic_launcher"
         uview:leftIconVisible="visible"
         uview:rightIconVisible="visible"
         uview:viewBgColor="@color/home_title" />

      <TableRow 
          android:layout_width="match_parent"
          android:layout_height="50dp">
          <TextView
              android:id="@+id/text_gift"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text=""
              android:gravity="fill"
              />
      </TableRow> 
      
<GridView  
	android:id="@+id/grid"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:horizontalSpacing="pt"
	android:verticalSpacing="2pt"
	android:numColumns="3"
	android:gravity="center"
	android:layout_weight="1"
	/>
   <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            />
            
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
    <Button
        android:id="@+id/train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/train" 
        android:background="@drawable/shape"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
      />
    </LinearLayout>
</LinearLayout>