<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5" >
    
  <com.mycustom.view.TitleView
         android:layout_width="match_parent"  
         android:layout_height="50dp"
         android:id="@+id/mytitleview"
         uview:titleText="@string/homeTitle"
         uview:leftIcon="@drawable/ic_launcher"
         uview:rightIcon="@drawable/ic_launcher"
         uview:leftIconVisible="visible"
         uview:rightIconVisible="visible"
         uview:viewBgColor="@color/home_title" />
  
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="180dp">
       <ImageView
        android:id="@+id/headportrait" 
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/headportrait"
            android:text="aa"
         android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
            />
            <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aa"
            android:layout_toRightOf="@+id/headportrait"
            android:layout_below="@+id/name"
            android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
            />

      <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
            android:layout_alignParentBottom="true"
             android:layout_marginLeft="10dp"
             android:layout_marginBottom="10dp">
            <ImageView
        android:id="@+id/integral" 
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        
        />
            <TableRow 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
            <TextView
            android:id="@+id/textintegral" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/integral"
            />
         <TextView
            android:id="@+id/textintegral_number" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            />
         </TableRow>
         </LinearLayout>
           <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
            android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="10dp"
             > 
         <ImageButton
        android:id="@+id/giftbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:background="#F5F5F5"
        
        />
         <TableRow 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
         <TextView
            android:id="@+id/textgift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gift"
            />
         <TextView
            android:id="@+id/textgift_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            />
         </TableRow>
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="10dp" 
             >
         <ImageButton
        android:id="@+id/interactionlbtn" 
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:background="#F5F5F5"
        
        />
   <TableRow 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       >
          <TextView
            android:id="@+id/textinteraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interaction"
            />
         <TextView
             android:id="@+id/textinteraction_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            />
         </TableRow>
         </LinearLayout>
        </RelativeLayout>
  <TableLayout
      android:layout_width="match_parent"
     android:layout_height="fill_parent" >
   <TableRow 
            android:id="@+id/TableRowone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#87CEFA">
         <ImageView 
             android:id="@+id/attentionpictureone"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_width="30dp"
             android:layout_height="20dp"
             android:src="@drawable/ic_launcher"
             android:scaleType="fitXY"/>
         <Button
            android:id="@+id/attentionbtnone"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/attentionone"
            android:background="#87CEFA"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="13dp"
            />
        </TableRow>
          <TableRow 
            android:id="@+id/TableRowtwo"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ADD8E6">
         <ImageView 
             android:id="@+id/attentionpicturetwo"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_width="30dp"
             android:layout_height="20dp"
             android:src="@drawable/ic_launcher"
             android:scaleType="fitXY"
             />
         <Button
            android:id="@+id/attentionbtntwo"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="@string/attentiontwo"
            android:background="#ADD8E6"
            android:gravity="center_vertical"
            android:layout_weight="10"
            android:textSize="13dp"
            />
         </TableRow>
         
         <TableRow 
            android:id="@+id/TableRowthree"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#87CEFA">
         <ImageView 
             android:id="@+id/mycollectpicture"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_width="30dp"
             android:layout_height="20dp"
             android:src="@drawable/ic_launcher"
             android:scaleType="fitXY"/>
         <Button
            android:id="@+id/mycollectbtn"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/mycollect"
            android:background="#87CEFA"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="13dp"
            />
        </TableRow>
        <TableRow 
            android:id="@+id/TableRowfour"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ADD8E6">
         <ImageView 
             android:id="@+id/mycallingcardpicture"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_width="30dp"
             android:layout_height="20dp"
             android:src="@drawable/ic_launcher"
             android:scaleType="fitXY"
             />
         <Button
            android:id="@+id/mycallingcardbtn"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="@string/mycallingcard"
            android:background="#ADD8E6"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="13dp"
            />
        </TableRow>
       </TableLayout>
</LinearLayout>
